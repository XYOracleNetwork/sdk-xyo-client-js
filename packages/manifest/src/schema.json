{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "XYO Manifest",
  "description": "Describes an XYO Package which is a collection of XYO Modules",
  "additionalProperties": false,
  "definitions": {
    "module": {
      "additionalProperties": false,
      "description": "Module Definition",
      "properties": {
        "name": {
          "description": "The friendly name for this module",
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "features": {
          "items": {
            "$ref": "#/definitions/feature"
          },
          "type": "array"
        },
        "language": {
          "$ref": "#/definitions/language"
        },
        "config": {
          "description": "The default config for the module",
          "type": "object"
        },
        "os": {
          "$ref": "#/definitions/os"
        },
        "id": {
          "description": "The canonical id that tells the loader how to find the correct registered module implementation",
          "type": "string"
        }
      },
      "required": [],
      "type": "object"
    },
    "modules": {
      "description": "List of Modules",
      "items": {
        "$ref": "#/definitions/module"
      },
      "nullable": true,
      "type": "array"
    },
    "dapp": {
      "additionalProperties": false,
      "description": "dApp Definition - Generally loaded into an existing or new Node Module",
      "id": {
        "type": "string"
      },
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "modules": {
          "additionalProperties": false,
          "description": "dApp Modules",
          "properties": {
            "private": {
              "$ref": "#/definitions/modules"
            },
            "public": {
              "$ref": "#/definitions/modules"
            }
          },
          "required": [],
          "type": "object"
        }
      },
      "required": [],
      "type": "object"
    },
    "dapps": {
      "description": "List of dApps",
      "items": {
        "$ref": "#/definitions/dapp"
      },
      "nullable": true,
      "type": "array"
    },
    "os": {
      "description": "Operating System",
      "enum": [
        "aix",
        "android",
        "darwin",
        "dragonfly",
        "freebsd",
        "illumos",
        "ios",
        "linux",
        "netbsd",
        "openbsd",
        "osx",
        "plan9",
        "solaris",
        "windows"
      ],
      "type": "string"
    },
    "feature": {
      "description": "Framework",
      "enum": [
        "angular",
        "asp.net",
        "browser",
        "cryengine",
        "corona",
        "django",
        "flutter",
        "ionic",
        "jquery",
        "nodejs",
        "phonegap",
        "react",
        "react-native",
        "spring",
        "unity",
        "unreal",
        "vue",
        "xamarin"
      ],
      "type": "string"
    },
    "language": {
      "description": "Language",
      "enum": [
        "c",
        "c++",
        "c#",
        "go",
        "java",
        "javascript",
        "kotlin",
        "lua",
        "python",
        "ruby",
        "rust",
        "scala",
        "solidity",
        "swift"
      ],
      "type": "string"
    },
    "architecture": {
      "description": "Architecture",
      "enum": [
        "386",
        "amd64",
        "arm",
        "arm64",
        "loong64",
        "mips",
        "mipsle",
        "mips64",
        "mips64le",
        "ppc64",
        "ppc64le",
        "riscv64",
        "s390x",
        "wasm"
      ],
      "type": "string"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "schema": {
      "type": "string"
    },
    "dapps": {
      "description": "The list of dApps that are defined in the manifest",
      "$ref": "#/definitions/dapps"
    },
    "description": {
      "type": "string"
    },
    "modules": {
      "description": "The list of global modules that are defined in the manifest",
      "additionalProperties": {
        "$ref": "#/definitions/module"
      },
      "type": "object"
    }
  },
  "required": []
}