{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "network": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "nodes": {
          "items": {
            "$ref": "#/definitions/node"
          },
          "type": "array"
        },
        "slug": {
          "type": "string"
        }
      },
      "required": [
        "slug"
      ],
      "type": "object"
    },
    "node": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/node_type"
        },
        "uri": {
          "type": "string"
        }
      },
      "required": [
        "slug",
        "type"
      ],
      "type": "object"
    },
    "node_type": {
      "enum": [
        "sentinel",
        "bridge",
        "archivist",
        "diviner"
      ],
      "type": "string"
    }
  },
  "properties": {
    "additional": {
      "description": "List of HURIs to additional configs for this domain",
      "items": {
        "type": "string"
      },
      "nullable": false,
      "type": "array"
    },
    "definitions": {
      "description": "List of HURIs to schemas that are officially defined by this domain",
      "items": {
        "type": "string"
      },
      "nullable": false,
      "type": "array"
    },
    "domain": {
      "description": "The name of the domain that this config applies to",
      "nullable": false,
      "type": "string"
    },
    "networks": {
      "description": "List of networks that this domain participates in",
      "items": {
        "$ref": "#/definitions/network"
      },
      "nullable": false,
      "type": "array"
    },
    "schema": {
      "description": "The schema name (must be network.xyo.domain)",
      "nullable": false,
      "pattern": "/^network.xyo.domain$/",
      "type": "string"
    }
  },
  "required": [
    "domain",
    "schema"
  ]
}